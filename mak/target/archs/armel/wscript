# set arm endian little specific options

import os

def options(opt):
	pass

def configure(conf):
	conf.env['ARCHITECTURE'] = 'arm'
	conf.env.append_unique('DEFINES', ['ARM', '_ARM', '__ARM__', '_ARMEL'])
	conf.env.append_unique('CFLAGS', ['-mthumb'])
	conf.env.append_unique('CXXFLAGS', ['-mthumb'])

def build(bld):
	pass
