	pass

def configure(conf):
	conf.check_tool("bison flex data", tooldir=['mak/tools'])
	conf.env['HOST'] = 'linux'
	conf.env['BUILD_VARIANTS'] = []
	conf.get_available_gcc()
	print (conf.env.GCC_TARGETS)

