# set win32 specific options
# detect tools : msvc, mingw


import os
from waflib.Logs import pprint
import mak.tools.cross_gcc


os.environ['PATH'] = '/Developer/usr/bin:'+os.environ['PATH']
try:
	for i in os.listdir('/Developer/Platforms/'):
		os.environ['PATH'] = '/Developer/Platforms/'+i+'/Developer/usr/bin:'+os.environ['PATH']
except:
	pass


def options(opt):
	pass

def configure(conf):
	conf.load("bison flex data", tooldir=['mak/tools'])
	conf.env['HOST'] = 'osx'
	conf.env['BUILD_VARIANTS'] = []

	conf.get_available_gcc()

