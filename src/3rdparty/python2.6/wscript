
def options(opt):
    pass

def setup(conf):
    try:
        conf.python_config('2.6', var='3rdparty.python26')
    except Exception:
        pass
    else:
        conf.env.SYSTEM_PYTHON26 = True

def build(bld):
    if bld.env.SYSTEM_PYTHON26:
        bld.env.append_unique('FEATURES', ['python2.6'])
