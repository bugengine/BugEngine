
def options(opt):
    pass

def setup(conf):
    try:
        conf.python_config('3.1', var='3rdparty.python31')
    except Exception:
        pass
    else:
        conf.env.SYSTEM_PYTHON31 = True

def build(bld):
    if bld.env.SYSTEM_PYTHON31:
        bld.env.append_unique('FEATURES', ['python3.1'])
