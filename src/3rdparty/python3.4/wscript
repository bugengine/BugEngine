
def options(opt):
    pass

def setup(conf):
    try:
        conf.python_config('3.4', var='3rdparty.python34')
    except Exception:
        pass
    else:
        conf.env.SYSTEM_PYTHON34 = True

def build(bld):
    if bld.env.SYSTEM_PYTHON34:
        bld.env.append_unique('FEATURES', ['python3.4'])
