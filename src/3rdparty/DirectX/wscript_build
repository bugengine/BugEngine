if not m.has_key(name):
    exparchoptions = {
        'win32-x86': coptions(libdir=[os.path.join('src', '3rdparty', name, 'lib.x86')], libs=['dxerr', 'bufferoverflowU', 'chkstk']),
        'win32-amd64': coptions(libdir=[os.path.join('src', '3rdparty', name, 'lib.amd64')], libs=['dxerr', 'bufferoverflowU', 'chkstk'])
        }
    m[name] = util( name, [], '3rdparty', coptions(), coptions(), {}, exparchoptions, platforms=['win32'])
