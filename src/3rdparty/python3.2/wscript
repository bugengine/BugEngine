
def options(opt):
    pass

def setup(conf):
    try:
        conf.python_config('3.2', var='3rdparty.python32')
    except Exception:
        pass
    else:
        conf.env.SYSTEM_PYTHON32 = True

def build(bld):
    if bld.env.SYSTEM_PYTHON33:
        bld.env.append_unique('FEATURES', ['python3.2'])
