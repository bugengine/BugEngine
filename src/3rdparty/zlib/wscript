
def options(opt):
	pass

def setup(conf):
	pass

def build(bld):
	if 'posix' not in bld.env.VALID_PLATFORMS or bld.env.PROJECTS:
		bld.shared_library('3rdparty.zlib', bld.platforms, use_master = False, warnings=False,
                           extra_defines=['ZLIB_DLL'], extra_public_defines=['ZLIB_DLL'])
	else:
		bld.env['LIB_3rdparty.zlib'] = ['z']

