	'win32-x86': coptions(libdir=[os.path.join('src', '3rdparty', name, 'lib.x86')], libs=['d3d9', 'd3dx9']),
	'win32-amd64': coptions(libdir=[os.path.join('src', '3rdparty', name, 'lib.amd64')], libs=['d3d9', 'd3dx9'])
	}
