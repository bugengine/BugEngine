if not m.has_key(name):
    opts = coptions(defines=['_REENTRANT'], libs=['pthread', 'rt'])
    exparchoptions = {}
    for p in ['linux', 'sunos', 'darwin', 'freebsd']:
        exparchoptions[p] = opts
    m[name] = util( name, [], '3rdparty', globalarchoptions=exparchoptions, platforms=['posix'])

