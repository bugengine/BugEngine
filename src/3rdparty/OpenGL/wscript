import mak
from mak import module
from waflib.Logs import info,warn

def options(opt):
	pass

def configure(conf):
	conf.check_lib('GL', var='GL')
	if not conf.env.GL:
		conf.check_lib('OpenGL32', var='GL')

def build(bld):
	if bld.env.GL:
		bld.m['OpenGL'] = module.util('OpenGL', [], '3rdparty', module.coptions(), module.coptions(libs=[bld.env.GL]))
	else:
		bld.m['OpenGL'] = None

