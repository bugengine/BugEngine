
def options(opt):
	pass

def setup(conf):
	if 'darwin' in conf.env.VALID_PLATFORMS:
		conf.check_framework('OpenGL', var='GLFramework')
	else:
		conf.check_lib(['OpenGL32', 'gdi32'], var='OpenGL') or conf.check_lib('GL', var='OpenGL')

def build(bld):
	if bld.env.GLFramework or bld.env.OpenGL or bld.env.PROJECTS:
		bld.thirdparty('3rdparty.OpenGL', libs=bld.env.OpenGL, frameworks=bld.env.GLFramework)
		bld.features.append('OpenGL')
