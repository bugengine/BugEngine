import os

def options(opt):
	pass

def setup(conf):
	pass

def build(bld):
	bld.thirdparty('3rdparty.win32', libs= ['kernel32', 'user32', 'gdi32', 'winspool', 'comdlg32', 'advapi32',
							'shell32', 'ole32', 'oleaut32', 'uuid', 'odbc32', 'odbccp32', 'winmm',
							'userenv', 'ws2_32'],
							includes=[os.path.join('src', '3rdparty', 'win32', 'api-win32')])
	bld.features.append('GUI')
